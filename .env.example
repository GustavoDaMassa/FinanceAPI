# Database (Railway Postgres plugin)
DATABASE_URL=jdbc:postgresql://<host>:<port>/<db>
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password_here

# JWT
JWT_SECRET=your_256bit_hex_secret_here

# Master Key (used once to create admin)
MASTER_KEY=your_secure_master_key_here

# Pluggy
PLUGGY_CLIENT_ID=your_pluggy_client_id
PLUGGY_CLIENT_SECRET=your_pluggy_client_secret

# Kafka (Upstash)
KAFKA_BOOTSTRAP_SERVERS=your-upstash-endpoint:9092
KAFKA_USERNAME=your_upstash_username
KAFKA_PASSWORD=your_upstash_password

# CORS (comma-separated, no spaces)
CORS_ALLOWED_ORIGINS=https://finance-frontend-lemon.vercel.app

# Spring profile
SPRING_PROFILES_ACTIVE=prod
